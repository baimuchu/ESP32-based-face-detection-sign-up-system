.header{
  width :100%;
  height:100rpx;
  background-color: skyblue;
  text-align:center;
  line-height:50px;
}

.btn-toggle {
  width:150px;
  height:150px;
  border-radius:50%;
  display:block;
  margin:50px auto;
  background-color:#ccc;
padding:0;
font-size:0;
}

button::after{ /*去掉默认样式*/
   -webkit-transform:scale(1);
   transform:scale(1);

}

.active{
  background-color: red;
}
page{
  height:100%;
}
.wrapper{
  height:100%;
}
.wrapper .search{
  width:100%;
  padding-right:50px;
  box-sizing: border-box;  /*改变盒子大小计算方式*/
  /*盒子大小=padding+border+content*/
  height:50px;
  background-color: #ccc;
  position: relative;
}
.wrapper .search input{widows: 100%;height:30px;
border:1px solid #333;
background-color: white;
border-radius: 15px;
float:left;
margin-top:10px;
padding-left:20px;
box-sizing:border-box ;
}
.wrapper .search button{width:50px;
  height:30px;
  line-height: 30px;
box-sizing: border-box;
padding:0;
position: absolute;
right:0;
top:10px;
}